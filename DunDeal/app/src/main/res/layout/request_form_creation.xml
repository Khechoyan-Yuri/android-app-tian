<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RequestFormCreation">

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <!-- USERNAME TextView & EditText -->
        <TextView
            android:id="@+id/tv_UserName"
            android:text="Username:"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_UserName"
            android:layout_alignBottom="@+id/tv_UserName" />


        <!--  Task Name TextView & EditText -->
        <TextView
            android:id="@+id/tv_TaskName"
            android:text="Name of Task:"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_TaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_UserName"
            android:layout_alignBottom="@+id/tv_UserName" />


        <!--  Details TextView & EditText -->
        <TextView
            android:id="@+id/tv_Details"
            android:text="Task Details:"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_UserName"
            android:layout_alignBottom="@+id/tv_UserName" />


        <!--  Location TextView & EditText -->
        <TextView
            android:id="@+id/tv_Location"
            android:text="Task Location:"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_UserName"
            android:layout_alignBottom="@+id/tv_UserName" />



        <!--  Payment Amount TextView & EditText -->
        <TextView
            android:id="@+id/tv_PaymentAmount"
            android:text="Payment Amount:"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_PaymentAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_UserName"
            android:layout_alignBottom="@+id/tv_UserName" />


        <!-- CANCEL BUTTON -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="0dp"
            android:onClick="CancelRequest"/>


        <!-- SUBMIT BUTTON -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:onClick="Submit"/>
    </RelativeLayout>
</ScrollView>