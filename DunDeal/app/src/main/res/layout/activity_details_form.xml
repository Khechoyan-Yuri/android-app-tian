<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jessie.dundeal.DetailsForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- USERNAME TextView & EditText -->
    <TextView
        android:id="@+id/tv_UserName"
        android:text="Username:"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_UserName"
        android:layout_alignBottom="@+id/tv_UserName"
        android:layout_toEndOf="@+id/tv_UserName"
        android:layout_toRightOf="@+id/tv_UserName"
        android:ems="10"
        android:textSize="20dp"/>

    <!--  Task Name TextView & EditText -->
    <TextView
        android:id="@+id/tv_TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_UserName"
        android:layout_marginTop="30dp"
        android:text="Task Name:"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_TaskName"
        android:layout_alignBottom="@+id/tv_TaskName"
        android:layout_toEndOf="@+id/tv_TaskName"
        android:layout_toRightOf="@+id/tv_TaskName"
        android:ems="10"
        android:textSize="20dp"/>

    <!--  Details TextView & EditText -->
    <TextView
        android:id="@+id/tv_Details"
        android:text="Task Details:"
        android:textSize="24dp"
        android:layout_marginTop="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_TaskName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/tv_Details"
        android:layout_alignBottom="@+id/tv_Details"
        android:layout_toRightOf="@+id/tv_Details"
        android:layout_toEndOf="@+id/tv_Details" />

    <!--  Location TextView & EditText -->
    <TextView
        android:id="@+id/tv_Location"
        android:text="Task Location:"
        android:textSize="24dp"
        android:layout_marginTop="68dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/tv_Location"
        android:layout_alignBottom="@+id/tv_Location"
        android:layout_toRightOf="@+id/tv_Location"
        android:layout_toEndOf="@+id/tv_Location" />

    <!--  Payment Amount TextView & EditText -->
    <TextView
        android:id="@+id/tv_PaymentAmount"
        android:text="Payment Amount:"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/tv_Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/PaymentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/tv_PaymentAmount"
        android:layout_alignBottom="@+id/tv_PaymentAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tv_PaymentAmount"
        android:layout_toEndOf="@+id/tv_PaymentAmount" />
        
        
    <!-- CANCEL BUTTON -->
    <Button
        android:id="@+id/BackButton"
        android:onClick="GoBack"
        android:layout_below="@id/PaymentAmount"
        android:text="Back"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    </RelativeLayout>
</ScrollView>
