<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.yuri_khechoyan.firebase_test.RequestFormCreation">

<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <!-- USERNAME TextView & EditText -->
    <TextView
        android:id="@+id/tv_UserName"
        android:text="Username:"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_UserName"
        android:layout_toRightOf="@+id/tv_UserName"
        android:ems="10"
        android:inputType="textPersonName" />

    <!--  Task Name TextView & EditText -->
    <TextView
        android:id="@+id/tv_TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_UserName"
        android:layout_marginTop="30dp"
        android:text="Task Name:"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/et_TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_TaskName"
        android:layout_alignBottom="@+id/tv_TaskName"
        android:layout_toEndOf="@+id/tv_TaskName"
        android:layout_toRightOf="@+id/tv_TaskName"
        android:ems="10"
        android:inputType="textPersonName" />

    <!--  Details TextView & EditText -->
    <TextView
        android:id="@+id/tv_Details"
        android:text="Task Details:"
        android:textSize="24dp"
        android:layout_marginTop="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_TaskName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/tv_Details"
        android:layout_alignBottom="@+id/tv_Details"
        android:layout_toRightOf="@+id/tv_Details"
        android:layout_toEndOf="@+id/tv_Details" />

    <!--  Location TextView & EditText -->
    <TextView
        android:id="@+id/tv_Location"
        android:text="Task Location:"
        android:textSize="24dp"
        android:layout_marginTop="68dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/tv_Location"
        android:layout_alignBottom="@+id/tv_Location"
        android:layout_toRightOf="@+id/tv_Location"
        android:layout_toEndOf="@+id/tv_Location" />

    <!--  Payment Amount TextView & EditText -->
    <TextView
        android:id="@+id/tv_PaymentAmount"
        android:text="Payment Amount:"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/tv_Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_PaymentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/tv_PaymentAmount"
        android:layout_alignBottom="@+id/tv_PaymentAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tv_PaymentAmount"
        android:layout_toEndOf="@+id/tv_PaymentAmount" />

    <!-- CANCEL BUTTON -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="0dp"
        android:onClick="CancelRequest"/>


    <!-- SUBMIT BUTTON -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />
</RelativeLayout>
</ScrollView>
