<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--Layout to hold-->
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/box_task_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#8ed2d9">

        <!--task title-->
        <TextView
            android:id="@+id/box_subtitle1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing Right Now"/>

        <!--details button-->
        <Button
            android:id="@+id/box_task_btn1"
            android:layout_below="@id/box_subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="10dp"
            android:onClick="DetailsLook"/>

        <!--accept button-->
        <Button
            android:id="@+id/box_task_btn2"
            android:layout_below="@id/box_subtitle1"
            android:layout_toRightOf="@id/box_task_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textSize="15dp"/>


    </RelativeLayout>

</RelativeLayout>